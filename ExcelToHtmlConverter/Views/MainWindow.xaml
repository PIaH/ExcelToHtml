<Window x:Class="ExcelToHtmlConverter.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ExcelToHtmlConverter.ViewModels"
        Title="Excel to HTML Converter"
        Icon="../Assets/ittnerit.ico"
        Height="53"
        Width="189"
        MinHeight="180"
        MinWidth="494"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Excel To HTML Converter"
               Margin="10,10,0,0"
               VerticalAlignment="Top"
               FontSize="24"
               FontFamily="Comic Sans MS"
               HorizontalAlignment="Left"
               Width="407">
            <Label.Effect>
                <DropShadowEffect />
            </Label.Effect>
        </Label>
        <Button Content="?"
                HorizontalAlignment="Right"
                Margin="0,10,10,0"
                Width="35"
                Height="30"
                FontFamily="Comic Sans MS"
                VerticalAlignment="Top"
                Command="{Binding InfoCommand}" />
        <Label Content="Filename:"
               HorizontalAlignment="Left"
               Margin="10,58,0,0"
               VerticalAlignment="Top"
               Width="86"
               FontFamily="Comic Sans MS" />
        <Border  Margin="101,62,50,0"
                 Height="23"
                 BorderBrush="Black"
                 BorderThickness="1"
                 VerticalAlignment="Top">
            <TextBlock Text="{Binding Filename, UpdateSourceTrigger=PropertyChanged}"
                       TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis"
                       FontFamily="Comic Sans MS"
                       Margin="0,0,0,4" />
        </Border>
        <Button Content="Convert"
                Margin="0,0,10,15"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Width="75"
                Command="{Binding ConvertCommand}"
                FontFamily="Comic Sans MS" />
        <Button Content="Close"
                HorizontalAlignment="Left"
                Margin="10,0,0,15"
                Width="75"
                Height="20"
                VerticalAlignment="Bottom"
                Command="{Binding CloseCommand}"
                FontFamily="Comic Sans MS" />
        <Button Content="..."
                HorizontalAlignment="Right"
                Margin="0,62,10,0"
                VerticalAlignment="Top"
                Width="35"
                Height="23"
                Command="{Binding SelectFileCommand}"
                FontFamily="Comic Sans MS" />

    </Grid>
</Window>
