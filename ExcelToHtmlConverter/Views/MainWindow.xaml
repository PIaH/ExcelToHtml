<Window x:Class="ExcelToHtmlConverter.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ExcelToHtmlConverter.ViewModels"
        Title="Excel to HTML Converter"
        Icon="../Assets/ittnerit.ico"
        Height="221"
        Width="189"
        MinHeight="220"
        MinWidth="494"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        
        <!-- =============================
        Styling 
        ============================= -->
        
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily"
                    Value="Times New RomanX" />
        </Style>
        <Style TargetType="{x:Type Label}">
            <Setter Property="FontFamily"
                    Value="Times New RomanX" />
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="FontFamily"
                    Value="Times New RomanX" />
        </Style>
    </Window.Resources>

    <Grid Margin="5">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- =============================
        Row 0
        ============================= -->

        <Label Grid.Row="0"
               Content="Excel To HTML Converter"
               VerticalAlignment="Top"
               FontSize="24"
               HorizontalAlignment="Left">
            <Label.Effect>
                <DropShadowEffect />
            </Label.Effect>
        </Label>
        <Button Content="?"
                HorizontalAlignment="Right"
                Grid.Row="0"
                FontSize="14"
                Width="35"
                Height="30"
                VerticalAlignment="Top"
                Command="{Binding InfoCommand}" />

        <!-- =============================
        Row 1
        ============================= -->

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Inner Row 0 -->

            <Label Grid.Row="0"
                   Grid.Column="0"
                   Content="Excel-File:"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Border  Grid.Row="0"
                     Grid.Column="1"
                     Margin="0 0 10 0"
                     HorizontalAlignment="Stretch"
                     BorderBrush="Black"
                     BorderThickness="1"
                     VerticalAlignment="Center">
                <TextBlock Text="{Binding Filename, UpdateSourceTrigger=PropertyChanged}"
                           TextWrapping="NoWrap"
                           HorizontalAlignment="Stretch"
                           TextTrimming="CharacterEllipsis" />
            </Border>
            <Button Grid.Row="0"
                    Grid.Column="2"
                    Content="..."
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Width="35"
                    Height="23"
                    Command="{Binding SelectFileCommand}" />

            <!-- Inner Row 1 -->

            <Label Grid.Row="1"
                   Grid.Column="0"
                   Content="Template-File:"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Border  Grid.Row="1"
                     Grid.Column="1"
                     Margin="0 0 10 0"
                     HorizontalAlignment="Stretch"
                     BorderBrush="Black"
                     BorderThickness="1"
                     VerticalAlignment="Center">
                <TextBlock Text="{Binding Template, UpdateSourceTrigger=PropertyChanged}"
                           TextWrapping="NoWrap"
                           HorizontalAlignment="Stretch"
                           TextTrimming="CharacterEllipsis" />
            </Border>
            <Button Grid.Row="1"
                    Grid.Column="2"
                    Content="..."
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Width="35"
                    Height="23"
                    Command="{Binding SelectTemplateCommand}" />

        </Grid>

        <!-- =============================
        Row 2
        ============================= -->
        
        <Grid Grid.Row="2">

            <Button Content="Start Conversion"
                    BorderBrush="DarkGreen"
                    Background="LightGreen"
                    Foreground="Black"
                    BorderThickness="2"
                    Margin="0,0,0,15"
                    Padding="5"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Command="{Binding ConvertCommand}"
                    FontWeight="Bold" />
            <Button Content="Close"
                    HorizontalAlignment="Left"
                    Margin="0,0,20,15"
                    Padding="5"
                    VerticalAlignment="Bottom"
                    Command="{Binding CloseCommand}" />
        </Grid>
    </Grid>
</Window>